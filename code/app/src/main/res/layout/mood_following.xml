<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGreen">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/toolbar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Centered Title -->
    <TextView
        android:id="@+id/mood_following_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood Following"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/login_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_toolbar" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/content_desc_back_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow"
        app:layout_constraintBottom_toBottomOf="@id/login_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_toolbar" />

    <!-- Filter Buttons -->
    <Button
        android:id="@+id/filter_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Events"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/login_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/filter_recent_button" />

    <Button
        android:id="@+id/filter_recent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top 3 Recent"
        app:layout_constraintTop_toTopOf="@id/filter_all_button"
        app:layout_constraintStart_toEndOf="@id/filter_all_button"
        app:layout_constraintEnd_toStartOf="@id/filter_week_button" />

    <Button
        android:id="@+id/filter_week_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Week"
        app:layout_constraintTop_toTopOf="@id/filter_all_button"
        app:layout_constraintStart_toEndOf="@id/filter_recent_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView for Mood Events -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mood_events_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/filter_all_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>